<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="@dimen/space_25"
            android:layout_height="@dimen/space_25"
            android:layout_gravity="center"
            android:src="@drawable/arrowbackgrey" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/discover"
            android:textColor="@color/clr_green"
            android:textSize="@dimen/space_20"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="@dimen/space_25"
            android:layout_height="@dimen/space_25"
            android:layout_gravity="center" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_30"
        android:layout_marginLeft="@dimen/space_20"
        android:layout_marginRight="@dimen/space_20"
        android:layout_marginTop="@dimen/space_10"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtSearch"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/button_fill__grey_back"
            android:gravity="center"
            android:focusableInTouchMode="true"
            android:singleLine="true"
            android:hint="@string/search" />

        <ImageView
            android:id="@+id/imgSearch"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/space_10"
            android:scaleType="fitXY"
            android:src="@drawable/search" />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="@dimen/space_100"
        android:paddingLeft="@dimen/space_50"
        android:paddingRight="@dimen/space_50"
        android:layout_marginTop="@dimen/space_20"></android.support.v4.view.ViewPager>

    <TextView
        android:id="@+id/txtSportDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Players that recently made tips on soccer"
        android:gravity="center"
        android:layout_marginTop="@dimen/space_20"
        android:textStyle="bold"
        android:textSize="@dimen/space_10"
        android:textColor="@color/clr_livescore_seq"/>
    <LinearLayout
        android:id="@+id/lnTabPart"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_50"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/RnPopular"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:id="@+id/viewPopularBorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_3"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:background="@color/clr_green" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/RnFire"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/txtFire"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="On Fire"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/space_15"
                android:textStyle="bold" />

            <View
                android:id="@+id/viewFireBorder"
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_3"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="@dimen/space_20"
                android:layout_marginRight="@dimen/space_20"
                android:background="@color/clr_green" />
        </RelativeLayout>
    </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/space_10">

        <LinearLayout
            android:id="@+id/lnContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"></LinearLayout>
    </ScrollView>
</LinearLayout>
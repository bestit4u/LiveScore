<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lnItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_60"
        android:background="@color/clr_white">
        <View
            android:layout_width="@dimen/space_line"
            android:layout_height="@dimen/space_60"
            android:background="@color/clr_content_border"
            android:layout_centerInParent="true"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_marginRight="@dimen/space_15"
                android:layout_gravity="center"
                android:orientation="horizontal" >
                <LinearLayout
                    android:id="@+id/lnHomePart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtHomeTimeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cristiano Ronaldo"
                        android:textSize="@dimen/space_8"
                        android:textColor="@color/clr_green" />
                    <TextView
                        android:id="@+id/txtHomePlayer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cristiano Ronaldo"
                        android:textSize="@dimen/space_10"
                        android:textColor="@color/clr_green"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtHomePlayer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cristiano Ronaldo"
                        android:textSize="@dimen/space_8"
                        android:textColor="@color/clr_grey" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/imgHomeEvent"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/space_10" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/space_5"
                android:layout_gravity="center"
                android:layout_height="@dimen/space_5" >

                <ImageView
                    android:layout_width="@dimen/space_5"
                    android:layout_height="@dimen/space_5"
                    android:src="@drawable/ic_green_circle" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="50"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/space_15"
                android:orientation="horizontal" >
                <ImageView
                    android:id="@+id/imgAwayEvent"
                    android:layout_width="@dimen/space_20"
                    android:layout_height="@dimen/space_20"
                    android:layout_gravity="center" />
                <LinearLayout
                    android:id="@+id/lnAwayPart"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|right"
                    android:gravity="right"
                    android:layout_marginLeft="@dimen/space_10"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtAwayTimeStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cristiano Ronaldo"
                        android:textSize="@dimen/space_8"
                        android:textColor="@color/clr_green" />
                    <TextView
                        android:id="@+id/txtAwayPlayer1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cristiano Ronaldo"
                        android:textSize="@dimen/space_10"
                        android:textColor="@color/clr_green"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/txtAwayPlayer2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:text="Cristiano Ronaldo"
                        android:textSize="@dimen/space_8"
                        android:textColor="@color/clr_grey" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>
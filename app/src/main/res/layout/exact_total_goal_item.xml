<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/clr_white"
    android:orientation="vertical">
    <LinearLayout
        android:id="@+id/lnItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_marginTop="@dimen/space_1"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/lnExactGoals"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1"
            android:background="@drawable/popular_black_back">
            <TextView
                android:id="@+id/txtExactGoals"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/clr_black"
                android:textSize="@dimen/space_10" />
        </LinearLayout>
        <View
            android:layout_width="@dimen/space_1"
            android:layout_height="match_parent" />
        <LinearLayout
            android:id="@+id/lnExactGoalsOdd"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:background="@drawable/popular_black_back">
            <TextView
                android:id="@+id/txtExactGoalsOdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_gravity="center"
                android:textColor="@color/clr_green"
                android:textSize="@dimen/space_10" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_white"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    tools:context="com.diretta.livescore.MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:layout_width="@dimen/space_70"
            android:layout_height="@dimen/space_70"
            android:src="@mipmap/ic_launcher"
            android:layout_gravity="center"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/space_10"
            android:text="LiveScore"
            android:textColor="@color/clr_green"
            android:textSize="@dimen/space_30"
            android:textStyle="bold"/>
         <TextView
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/create_bet_tips_for_free"
             android:textColor="@color/clr_grey"
             android:gravity="center"
             android:layout_marginTop="@dimen/space_20"/>
        <Button
            android:id="@+id/btnSignUp"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_30"
            android:background="@drawable/button_fill_back"
            android:textColor="@color/clr_white"
            android:textSize="@dimen/space_15"
            android:text="@string/sign_up"/>
        <Button
            android:id="@+id/btnSignIn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_40"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            android:layout_marginTop="@dimen/space_15"
            android:background="@drawable/button_empty_back"
            android:textColor="@color/clr_green"
            android:textSize="@dimen/space_15"
            android:text="@string/sign_in"/>
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/space_20"
            android:layout_marginRight="@dimen/space_20"
            style="@style/FacebookLoginButton"/>
    </LinearLayout>

</RelativeLayout>

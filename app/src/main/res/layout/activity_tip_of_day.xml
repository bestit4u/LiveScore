<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/clr_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_180"
        android:background="@drawable/stadiumbg"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/space_10"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imgBack"
                android:layout_width="@dimen/space_30"
                android:layout_height="@dimen/space_30"
                android:layout_gravity="center"
                android:src="@drawable/arrowbackgwhite" />

        </LinearLayout>

        <TextView
            android:id="@+id/txtProfileName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Preben EJKjaer"
            android:textColor="@color/clr_white"
            android:textSize="@dimen/space_15" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_80"
            android:layout_marginTop="@dimen/space_10"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/space_60"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>
            <RelativeLayout
                android:layout_width="@dimen/space_70"
                android:layout_height="@dimen/space_70">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="@dimen/space_60"
                    android:layout_height="@dimen/space_60"
                    android:layout_centerHorizontal="true"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="@dimen/space_1" />
                <ImageView
                    android:id="@+id/imgExpertThisMonth"
                    android:layout_width="@dimen/space_30"
                    android:layout_height="@dimen/space_30"
                    android:src="@drawable/expert"
                    android:scaleType="fitXY"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="@dimen/space_60"
                android:layout_weight="1"
                android:orientation="horizontal">

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/tip_of_day"
        android:textColor="@color/clr_green"
        android:gravity="center"
        android:textSize="@dimen/space_15"
        android:layout_margin="@dimen/space_10"/>
    <LinearLayout
        android:id="@+id/lnCreateTip"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_80"
        android:background="@drawable/button_empty_back"
        android:layout_marginLeft="@dimen/space_10"
        android:layout_marginRight="@dimen/space_10"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/lnTipPart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10">
                <TextView
                    android:id="@+id/txtHomeName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Denmark"
                    android:gravity="center|left"
                    android:textColor="@color/clr_black" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgHome"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_30"
                        android:layout_gravity="center"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="VS"
                        android:textColor="@color/clr_black"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"/>
                    <ImageView
                        android:id="@+id/imgAway"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_30"
                        android:layout_gravity="center"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtAwayName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Portugal"
                    android:gravity="center|right"
                    android:textColor="@color/clr_black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_20"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_5">
                <TextView
                    android:id="@+id/txtLeagueName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="World Championship"
                    android:gravity="center|left"
                    android:textSize="@dimen/space_8"
                    android:textColor="@color/clr_black" />
                <TextView
                    android:id="@+id/txtOddStyle"
                    android:layout_width="@dimen/space_100"
                    android:layout_height="match_parent"
                    android:text="Total tip @75.3"
                    android:gravity="center"
                    android:textSize="@dimen/space_8"
                    android:layout_marginLeft="@dimen/space_10"
                    android:layout_marginRight="@dimen/space_10"
                    android:textColor="@color/clr_black"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_weight="1">
                    <ImageView
                        android:id="@+id/imgResultStatus"
                        android:layout_width="0dp"
                        android:layout_marginLeft="@dimen/space_15"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:scaleType="fitCenter"
                        android:layout_marginRight="@dimen/space_15"
                        />
                    <TextView
                        android:id="@+id/txtTipAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="100"
                        android:gravity="center|right"
                        android:textSize="@dimen/space_8"
                        android:textColor="@color/clr_black" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lnChooseTipPart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click here to choose tip"
                android:textColor="@color/clr_black"/>
            <ImageView
                android:layout_width="@dimen/space_20"
                android:layout_height="@dimen/space_20"
                android:src="@drawable/menu_createtip"
                android:layout_marginLeft="@dimen/space_10"/>
        </LinearLayout>
    </LinearLayout>
    <EditText
        android:id="@+id/edtDescription"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:hint="Make a detailed analasis here..."
        android:layout_margin="@dimen/space_10"
        android:padding="@dimen/space_10"
        android:gravity="left|top"
        android:textColor="@color/clr_black"
        android:textSize="@dimen/space_12"
        android:background="@drawable/button_empty_back"></EditText>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_40"
        android:layout_marginBottom="@dimen/space_10"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:id="@+id/btnPublish"
            android:layout_width="@dimen/space_150"
            android:layout_height="match_parent"
            android:text="Publish"
            android:textColor="@color/clr_white"
            android:gravity="center"
            android:background="@drawable/greenbutton_fill_back"
            />
    </LinearLayout>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/lnItem"
        android:layout_width="match_parent"
        android:layout_height="@dimen/space_100"
        android:background="@color/clr_white"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="@dimen/space_10"
            android:background="@drawable/button_empty_back">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_40"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginLeft="@dimen/space_10">
                <TextView
                    android:id="@+id/txtHomeName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Denmark"
                    android:gravity="center|left"
                    android:textColor="@color/clr_black" />
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">
                    <ImageView
                        android:id="@+id/imgHome"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_30"
                        android:layout_gravity="center"
                        android:src="@drawable/denmark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="VS"
                        android:textColor="@color/clr_black"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/space_10"
                        android:layout_marginRight="@dimen/space_10"/>
                    <ImageView
                        android:id="@+id/imgAway"
                        android:layout_width="@dimen/space_30"
                        android:layout_height="@dimen/space_30"
                        android:layout_gravity="center"
                        android:src="@drawable/portugal"/>
                </LinearLayout>
                <TextView
                    android:id="@+id/txtAwayName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Portugal"
                    android:gravity="center|right"
                    android:textColor="@color/clr_black" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_20"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_5"
                android:layout_marginLeft="@dimen/space_10"
                android:layout_marginRight="@dimen/space_10"
                android:layout_marginBottom="@dimen/space_10">
                <TextView
                    android:id="@+id/txtLeagueName"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="World Championship"
                    android:gravity="center|left"
                    android:textSize="@dimen/space_8"
                    android:textColor="@color/clr_black" />
                <RelativeLayout
                    android:layout_width="@dimen/space_100"
                    android:layout_height="match_parent">
                    <TextView
                        android:id="@+id/txtOddStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="Total tip @75.3"
                        android:layout_centerInParent="true"
                        android:gravity="center"
                        android:textSize="@dimen/space_8"
                        android:textColor="@color/clr_black"/>
                    <ImageView
                        android:id="@+id/imgBlur"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/blur_odd"
                        android:visibility="gone"
                        android:scaleType="fitXY"/>
                </RelativeLayout>

                <TextView
                    android:id="@+id/txtTipAmount"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="100"
                    android:gravity="center|right"
                    android:textSize="@dimen/space_8"
                    android:textColor="@color/clr_black" />
            </LinearLayout>
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgProfile"
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_marginRight="@dimen/space_5"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            app:civ_border_color="#FF000000"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            app:civ_border_width="@dimen/space_1" />
        <RelativeLayout
            android:layout_width="@dimen/space_20"
            android:layout_height="@dimen/space_20"
            android:layout_marginLeft="@dimen/space_5"
            android:layout_alignParentLeft="true"
            android:visibility="gone"
            android:layout_alignParentTop="true">
            <ImageView
                android:id="@+id/toggleStar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/ic_star_on"
                android:textOn=""
                android:textOff=""/>
            <TextView
                android:id="@+id/txtStarCount"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/space_7"
                android:textColor="@color/clr_black"/>
        </RelativeLayout>
    </RelativeLayout>
</LinearLayout>